
<div class = 'row edit-blog panel panel-default' id = 'edit-blog-<%=blog_id%>' hidden = 'true'>
  <div class = 'panel-body'>
  <%= render :partial => 'edit_blog_template', :locals => {blog_id: blog_id, blog_row_num: blog_row_num}%>
  </div>
</div>
<div class = 'row blog panel panel-default' id = 'blog-<%=blog_id%>'>
    <div class = 'panel-heading'>
      <div class = 'row '>
        <div class = 'col-lg-10 col-md-10' id = 'blog-title-<%=blog_id%>'>
          <h3><%= blog_title %></h3>
        </div>
        <% if session[:login] %>
          <div class = 'col-lg-1 col-md-1' >
            <h1 style = 'float: right; padding-right: 13px'>
              <button class='btn btn-danger delete-blog-button' id = 'delete-blog-button-<%=blog_id%>'> Delete</button>
            </h1>
          </div>
          <div class = 'col-lg-1 col-md-1' >
            <h1 style = 'float: right; padding-right: 13px'><button class='btn btn-info edit-blog-button' id = 'edit-blog-button-<%=blog_id%>'> Edit</button></h1>
          </div>
        <% end %>
      </div>
      <div class = 'row'>
        <p><span class="glyphicon glyphicon-calendar"></span> <%= blog_upload_time.to_date %></p>
      </div>
    </div>
    <div class = 'blog-content panel-body' id = 'blog-content-<%=blog_id%>'>
      <%= blog_content %>
    </div>
</div>